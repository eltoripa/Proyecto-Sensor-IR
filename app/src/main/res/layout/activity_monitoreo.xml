<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">
    <!-- Imagen del logo -->

    <ImageView
        android:id="@+id/logoMonitoreo"
        android:layout_width="45dp"
        android:layout_height="34dp"
        android:layout_marginTop="44dp"
        android:contentDescription="Logo del sistema"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tituloMonitoreo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:text="Panel de Monitoreo Admin"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoConteo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Personas detectadas: 0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloMonitoreo" />

    <Button
        android:id="@+id/botonActualizar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/adamina"
        android:text="Actualizar"
        app:layout_constraintEnd_toEndOf="@id/textoConteo"
        app:layout_constraintStart_toStartOf="@id/textoConteo"
        app:layout_constraintTop_toBottomOf="@id/textoConteo" />

    <Button
        android:id="@+id/botonSalir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:fontFamily="@font/adamina"
        android:text="Salir"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@id/botonActualizar"
        app:layout_constraintStart_toStartOf="@id/botonActualizar"
        app:layout_constraintTop_toBottomOf="@id/botonActualizar" />
</androidx.constraintlayout.widget.ConstraintLayout>
